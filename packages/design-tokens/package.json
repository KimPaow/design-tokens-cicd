{
  "name": "design-tokens",
  "version": "0.0.0",
  "browser": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run transform && npm run build:themes && tsc --build tsconfig.json",
    "transform": "npm run transform:light && npm run transform:dark",
    "transform:dark": "token-transformer src/figma-tokens-output.json --output=sd-tokens/sd-dark.json --sets=base/colors,base/radii,base/shadows,base/dimension,base/typography,themes/dark,semantic/theme,semantic/typography --excludes=themes/light",
    "transform:light": "token-transformer src/figma-tokens-output.json --output=sd-tokens/sd-light.json --sets=base/colors,base/radii,base/shadows,base/dimension,base/typography,themes/light,semantic/theme,semantic/typography --excludes=themes/dark",
    "build:themes": "ts-node src/scripts/build.ts"
  },
  "author": "CADDi Inc.",
  "license": "UNLICENSED",
  "devDependencies": {
    "style-dictionary": "^3.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "token-transformer": "^0.0.28"
  }
}
